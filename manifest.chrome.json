{
  "manifest_version": 3,
  "name": "Grazily Applier",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "storage",
    "downloads",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/populate.js", "scripts/content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["scripts/utils/index.js"]
    }
  ]
}
