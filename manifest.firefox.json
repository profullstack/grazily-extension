{
  "manifest_version": 3,
  "name": "Easy Applier",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "menus",
    "storage",
    "downloads",
    "declarativeContent",
    "activeTab",
    "scripting"
  ],
  "background": {
    "page": "bg.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  }
}
